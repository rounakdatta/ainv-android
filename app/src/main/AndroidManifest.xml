<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.asslpl.ainv">
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/asslpl_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        android:usesCleartextTraffic="true">
        <activity android:name="com.asslpl.ainv.ItemMasterEntry"></activity>
        <activity android:name="com.asslpl.ainv.WarehouseEntry" />
        <activity android:name="com.asslpl.ainv.ActivityChooser" />
        <activity android:name="com.asslpl.ainv.view_inventory" />
        <activity android:name="com.asslpl.ainv.search" />
        <activity android:name="com.asslpl.ainv.user_onboarding" />
        <activity android:name="com.asslpl.ainv.start_page">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>